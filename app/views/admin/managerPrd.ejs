<script>


    document.addEventListener('DOMContentLoaded', function () {
        const addNewProductFormContainer = document.getElementById('addNewProductFormContainer');
        const cancelAddNewProductForm = document.getElementById('cancelAddNewProductForm');
        const addNewProductForm = document.getElementById('addNewProductForm');
        const newProductImage = document.getElementById('newProductImage');
        const newProductImagePreview = document.getElementById('newProductImagePreview');
        const parentSelect = document.getElementById('newProductCategory');
        const childSelect = document.getElementById('newProductChild');

        // Khi danh mục cha thay đổi
        parentSelect.addEventListener('change', () => {
            const selectedParentId = parentSelect.value;
            fetch(`/categories/${selectedParentId}`)
                .then(response => response.json())
                .then(childCategories => {
                    childSelect.innerHTML = '<option value="">Chọn phong cáchs</option>';
                    childCategories.forEach(category => {
                        const option = document.createElement('option');
                        option.value = category.IDCate;
                        option.textContent = category.NameCate;
                        childSelect.appendChild(option);
                    });
                });
        });

        // Hiển thị form thêm sản phẩm
        document.getElementById('addProductBtn').addEventListener('click', () => {
            addNewProductFormContainer.style.display = 'block';
        });

        // Đóng form thêm sản phẩm
        cancelAddNewProductForm.addEventListener('click', () => {
            addNewProductFormContainer.style.display = 'none';
            addNewProductForm.reset();
            newProductImagePreview.style.display = 'none';
        });

        // Xử lý xem trước hình ảnh
        newProductImage.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    newProductImagePreview.src = e.target.result;
                    newProductImagePreview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        // Xử lý gửi form
        addNewProductForm.addEventListener('submit', function (event) {
            event.preventDefault();
            const newImg = document.getElementById("newProductImage");
            const formData = new FormData(); // Tạo FormData để chứa dữ liệu

            // Thêm dữ liệu văn bản vào FormData
            formData.append('NamePrd', document.querySelector('[name="newProductName"]').value);
            formData.append('PricePrd', document.querySelector('[name="newProductPrice"]').value);
            formData.append('TitlePrd', document.querySelector('[name="newProductDescription"]').value);
            formData.append('IdCate', document.querySelector('[name="newProductCategory"]').value);
            formData.append('ParentCate', document.querySelector('[name="newProductChild"]').value);

            // Thêm file hình ảnh vào FormData
            if (newImg.files[0]) {
                formData.append('ImgPrd', newImg.files[0]);
            } else {
                alert('Vui lòng chọn hình ảnh!');
                return; // Dừng lại nếu không có hình ảnh
            }

            // Gửi FormData qua fetch
            fetch('/admin/managerPrd/add', {
                method: 'POST',
                body: formData, // Gửi toàn bộ FormData
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Có lỗi xảy ra khi gửi dữ liệu!');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Phản hồi từ server:', data);
                    alert('Thêm sản phẩm thành công!');
                    // Reset form nếu cần thiết
                })
                .catch(error => {
                    console.error('Lỗi:', error);
                    alert('Không thể thêm sản phẩm. Vui lòng thử lại.');
                });


        });
    });

    // sửa sản phẩm
    document.addEventListener("DOMContentLoaded", function () {
        const rows = document.querySelectorAll(".product-row");
        const form = document.getElementById("productDetailsForm");
        let product = null; // Dùng let để có thể gán lại giá trị
        let category = null;
        let idPrd = null;
        rows.forEach(row => {
            row.addEventListener("click", function () {
                const productId = this.dataset.id; // Lấy ID sản phẩm
                fetch(`/admin/singleProduct/${productId}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Product not found');
                        }
                        return response.json();
                    })
                    .then(result => {
                        product = result.product; // Lấy thông tin sản phẩm
                        category = result.category; // Lấy danh sách danh mục (category)
                        idPrd = result.product.IDPrd;
                        // Hiển thị thông tin sản phẩm
                        document.getElementById("productName").value = product.NamePrd;
                        document.getElementById("productMeta").value = product.MetaPrd;
                        document.getElementById("productPrice").value = product.PricePrd;
                        // document.getElementById("productImageInput").value = product.ImgPrd;
                        document.getElementById("productImage").src = product.ImgPrd;
                        document.getElementById("TitlePrd").value = product.TitlePrd;

                        const productTypeSelect = document.getElementById("productType");
                        productTypeSelect.innerHTML = ''; // Reset lại các option trước
                        const productStyleSelect = document.getElementById("productStyle");
                        productStyleSelect.innerHTML = ''; // Reset lại các option trước
                        category.parentCategories.forEach(cat => {
                            const option = document.createElement('option');
                            option.value = cat.IDCate; // Gán giá trị của option là IDCategory
                            option.textContent = cat.NameCate; // Gán tên danh mục làm text của option
                            if (product.IdCate === cat.IDCate) {
                                option.selected = true;

                                category.childCategories.forEach(cats => {
                                    if (product.IdCate === cats.ParentCate) {
                                        const options = document.createElement('option');
                                        options.value = cats.IDCate; // Gán giá trị của option là IDCategory của danh mục con
                                        options.textContent = cats.NameCate; // Gán tên danh mục con làm text của option
                                        if (product.ParentCate === cats.IDCate) {
                                            options.selected = true;
                                        }
                                        productStyleSelect.appendChild(options);
                                    }
                                });
                            }
                            productTypeSelect.appendChild(option);
                        });
                        form.style.display = "block";
                    })
                    .catch(error => {
                        alert(error.message);
                    });
            });
        });

        // Đóng form khi nhấn nút "Đóng"
        document.getElementById("closeForm").addEventListener("click", function () {
            form.style.display = "none";
        });
        document.getElementById('productType').addEventListener('change', function (event) {
            const selectedValue = event.target.value; // Lấy giá trị của option được chọn
            const productTypeSelect = document.getElementById("productType");
            productTypeSelect.innerHTML = ''; // Reset lại các option trước
            const productStyleSelect = document.getElementById("productStyle");
            productStyleSelect.innerHTML = ''; // Reset lại các option trước
            category.parentCategories.forEach(cat => {
                const option = document.createElement('option');
                option.value = cat.IDCate; // Gán giá trị của option là IDCategory
                option.textContent = cat.NameCate; // Gán tên danh mục làm text của option
                if (selectedValue == cat.IDCate) {
                    option.selected = true;
                    category.childCategories.forEach(cats => {
                        if (selectedValue == cats.ParentCate) {
                            const options = document.createElement('option');
                            options.value = cats.IDCate; // Gán giá trị của option là IDCategory của danh mục con
                            options.textContent = cats.NameCate; // Gán tên danh mục con làm text của option
                            if (product.ParentCate === cats.IDCate) {
                                options.selected = true;
                            }
                            productStyleSelect.appendChild(options);
                        }
                    });
                }
                productTypeSelect.appendChild(option);
            });
        });
        const formm = document.getElementById("productForm");
        const saveButton = document.getElementById("saveForm");

        saveButton.addEventListener("click", function (event) {
            event.preventDefault(); // Ngăn hành vi gửi form mặc định

            // Thu thập form data
            const formData = new FormData();
            formData.append("IDPrd", idPrd || "");
            formData.append("productName", document.getElementById("productName").value.trim());
            formData.append("productMeta", document.getElementById("productMeta").value.trim());
            formData.append("productPrice", parseFloat(document.getElementById("productPrice").value) || 0);
            formData.append("titlePrd", document.getElementById("TitlePrd").value.trim());
            formData.append("productType", document.getElementById("productType").value);
            formData.append("productStyle", document.getElementById("productStyle").value);

            // Lấy tệp từ input file
            const fileInput = document.getElementById("productImageInput");
            if (fileInput.files.length > 0) {
                formData.append("productImage", fileInput.files[0]);
            } else {
                alert("Vui lòng tải lên một hình ảnh sản phẩm.");
                return;
            }

            // Kiểm tra giá trị đầu vào (tuỳ chọn)
            if (!formData.get("productName")) {
                alert("Tên sản phẩm không được để trống.");
                return;
            }
            if (formData.get("productPrice") <= 0) {
                alert("Giá sản phẩm phải lớn hơn 0.");
                return;
            }
            // Gửi FormData qua fetch
            fetch("/admin/saveProduct", {
                method: "POST",
                body: formData, // Gửi toàn bộ FormData
            })
                .then(response => {
                    console.log('Response status:', response.status); // Kiểm tra mã trạng thái
                    if (!response.ok) {
                        throw new Error("Failed to save product");
                    }
                    return response.json(); // Chuyển đổi dữ liệu trả về thành JSON
                })
                .then(data => {
                    alert("Product saved successfully!");
                    location.reload(); // Tải lại trang
                })
                .catch(error => {
                    alert("Error: " + error.message);
                });
        });
        document.getElementById("productImageInput").addEventListener("change", function (event) {
            const file = event.target.files[0]; // Lấy file từ input
            if (file) {
                const reader = new FileReader();

                // Khi đọc file xong, hiển thị ảnh
                reader.onload = function (e) {
                    const img = document.getElementById("productImage");
                    img.src = e.target.result;
                    img.alt = file.name; // Cập nhật mô tả alt
                };

                reader.readAsDataURL(file); // Đọc file dưới dạng URL base64
            }
        });


    });


</script>