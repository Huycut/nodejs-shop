        <h4>Thêm sản phẩm mới</h4>
        <form id="addNewProductForm">
            <div>
                <label for="newProductName">Tên sản phẩm:</label>
                <input type="text" id="newProductName" name="newProductName" placeholder="Nhập tên sản phẩm" required />
            </div>
            <div>
                <label for="newProductPrice">Giá sản phẩm:</label>
                <input type="number" id="newProductPrice" name="newProductPrice" placeholder="Nhập giá sản phẩm"
                    required />
            </div>
            <div class="span-full">
                <label for="newProductDescription">Mô tả sản phẩm:</label>
                <textarea id="newProductDescription" name="newProductDescription" placeholder="Nhập mô tả sản phẩm"
                    required></textarea>
            </div>
            <div>
                <label for="newProductCategory">Danh mục:</label>
                <select id="newProductCategory" name="newProductCategory" required>
                    <option value="">Chọn danh mục</option>
                    <% DataCate.category.parentCategories.forEach(category=> { %>
                        <option value="<%= category.IDCate %>">
                            <%= category.NameCate %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div>
                <label for="newProductChild">Phong cách:</label>
                <select id="newProductChild" name="newProductChild" required>
                    <option value="">Chọn phong cách</option>

                    <% DataCate.category.childCategories.forEach(category=> { %>
                        <option value="<%= category.IDCate %>" data-parent="<%= category.ParentCate %>">
                            <%= category.NameCate %>
                        </option>
                        <% }); %>
                </select>
