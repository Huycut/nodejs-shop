                                    <span class="placeholder" data-placeholder="Số Điện Thoại"></span>
                                </div>
                                <div class="col-md-6 form-group p_star">
                                    <input type="text" class="form-control" id="email" name="email">
                                    <span class="placeholder" data-placeholder="Email"></span>
                                </div>
                                <div class="col-md-12 form-group p_star">
                                    <select class="country_select" onchange="loadDistricts(this.value)">
                                        <option value="Tỉnh" selected disabled>Tỉnh</option>
                                        <% provinces.data.forEach(provincess=> { %>
                                            <option value="<%= provincess.code %>">
                                                <%= provincess.name_with_type %>
